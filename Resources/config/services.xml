<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="neutron_page.plugin.class">Neutron\Plugin\PageBundle\PagePlugin</parameter>
        <parameter key="neutron_page.event_listener.main_menu.class">Neutron\Plugin\PageBundle\EventListener\MainMenuListener</parameter>
        <parameter key="neutron_page.controller.page.default.class">Neutron\Plugin\PageBundle\Controller\Backend\PageController</parameter>
        <parameter key="neutron_page.manager.page.default.class">Neutron\Plugin\PageBundle\Doctrine\ORM\PageManager</parameter>
        <parameter key="neutron_page.form.type.page.class">Neutron\Plugin\PageBundle\Form\Type\PageType</parameter>
        <parameter key="neutron_page.form.type.page.content.class">Neutron\Plugin\PageBundle\Form\Type\Page\ContentType</parameter>
        <parameter key="neutron_page.form.handler.page.default.class">Neutron\Plugin\PageBundle\Form\Handler\PageHandler</parameter>
        <parameter key="neutron_page.doctrine.event_subscriber.category.class">Neutron\Plugin\PageBundle\Doctrine\EventSubscriber\CategorySubscriber</parameter>
    </parameters>

    <services>

        <service id="neutron_page.plugin" class="%neutron_page.plugin.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="neutron_layout.plugin.factory" />
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
        </service>
        
        
        <service id="neutron_plugin_page.factory" 
        	class="Neutron\LayoutBundle\Plugin\PluginFactory"
        	factory-service="neutron_page.plugin"
        	factory-method="create"
        >
            <tag name="neutron.plugin" alias="neutron.plugin.page"/>
        </service>
        
        <service id="neutron_page.event_listener.main_menu" class="%neutron_page.event_listener.main_menu.class%">
            <!-- <tag name="kernel.event_listener" event="neutron_admin.onMenuConfigure" method="onMenuConfigure"/> -->
        </service>

	
        <service id="neutron_page.controller.page.default" class="%neutron_page.controller.page.default.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
		
        <service id="neutron_page.manager.page.default" class="%neutron_page.manager.page.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%neutron_page.page_class%</argument>
        </service>
        
	<service id="neutron_page.page.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%neutron_page.page.form.name%</argument>
            <argument>%neutron_page.form.type.page%</argument>
        </service>
        
        <service id="neutron_page.form.type.page" class="%neutron_page.form.type.page.class%" scope="request">
            <argument type="service" id="request" />
            <tag name="form.type" alias="neutron_page_form_page" />
        </service>
        		
	<service id="neutron_page.form.type.page.content" class="%neutron_page.form.type.page.content.class%">
            <argument>%neutron_page.page_class%</argument>
            <argument>%neutron_page.page_image_class%</argument>
            <argument>%neutron_page.templates%</argument>
            <argument>%neutron_page.media%</argument>
            <tag name="form.type" alias="neutron_page_form_type_page_content" />
	</service>
		
	<service id="neutron_page.form.handler.page.default" 
            class="%neutron_page.form.handler.page.default.class%" 
            scope="request" 
            public="false">
			
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="neutron_page.page.form" />
            <argument type="service" id="neutron_component.form.helper.form_helper" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument type="service" id="neutron_page.manager.page" />
            <argument type="service" id="neutron_admin.acl.manager" />
            <argument type="service" id="neutron_page.layout_manager" />
            <argument type="service" id="neutron_tree.manager.factory" />
            <argument>%neutron_admin.category.tree_data_class%</argument>
        </service>

    	<service id="neutron_page.doctrine.event_subscriber.category" class="%neutron_page.doctrine.event_subscriber.category.class%">
            <argument>%neutron_admin.category.tree_data_class%</argument>
            <argument>%neutron_page.page_class%</argument>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        
    	<service id="neutron_page.layout_manager" parent="neutron_layout.layout_manager">
            <call method="setPlugin">
                <argument type="service" id="neutron_plugin_page.factory" />
            </call> 
        </service>
	
    </services>
	
</container>
